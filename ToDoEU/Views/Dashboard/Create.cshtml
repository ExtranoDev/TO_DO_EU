@model ToDoEU.Models.DTO.ToDoItemModel
@{
    ViewData["Title"] = "Create Goal";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Activity ToDo</h2>
            <hr />
        </div>
        <!-- <div asp-validation-summary="All"></div> -->
        <div class="mb-3">
            <input asp-for="ItemName" class="form-control" placeholder="Activity" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="ItemDescription" class="form-control" placeholder="Short description" />
            <span asp-validation-for="ItemDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="ItemStatus" class="form-control" disabled value="pending"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Dashboard" asp-action="Display" class="btn btn-secondary" style="width:150px">
            Back to ToDo List
        </a>
    </div>
</form>

<!-- Client side Validation -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

