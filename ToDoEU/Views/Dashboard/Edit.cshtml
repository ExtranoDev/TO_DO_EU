@model ToDoEU.Models.DTO.ToDoItemModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="ItemId" hidden />
    <input asp-for="userId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Activity ToDo</h2>
            <hr />
        </div>
        <!-- <div asp-validation-summary="All"></div> -->
        <div class="mb-3">
            <label asp-for="ItemName"></label>
            <input asp-for="ItemName" class="form-control" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ItemDescription"></label>
            <input asp-for="ItemDescription" class="form-control" />
            <span asp-validation-for="ItemDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ItemStatus"></label>
            <select asp-for="ItemStatus" class="form-select">
              <option value="pending" default>Pending</option>
              <option value="started">Started</option>
              <option value="completed">completed</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Dashboard" asp-action="Display" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

<!-- Client side Validation -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />
    }
}

