@model ToDoEU.Models.DTO.ToDoItemModel
@{
    ViewData["Title"] = "Delete Goal";
}

<form method="post" asp-action="Delete">
    <input asp-for="ItemId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <!-- <div asp-validation-summary="All"></div> -->
        <div class="mb-3">
            <label asp-for="ItemName"></label>
            <input asp-for="ItemName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ItemDescription"></label>
            <input asp-for="ItemDescription" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ItemStatus"></label>
            <input asp-for="ItemStatus" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Admin" asp-action="DeleteAdmin" class="btn btn-secondary" style="width:150px">
            Back to Admin
        </a>
    </div>
</form>

<!-- Client side Validation -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />
    }
}